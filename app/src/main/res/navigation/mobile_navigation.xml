<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_appointment">

    <fragment
        android:id="@+id/navigation_appointment"
        android:name="com.example.hospital.ui.appointment.AppointmentFragment"
        android:label="@string/title_appointment"
        tools:layout="@layout/fragment_appointment" />

    <fragment
        android:id="@+id/navigation_doctor"
        android:name="com.example.hospital.ui.doctor.DoctorFragment"
        android:label="@string/title_doctor"
        tools:layout="@layout/fragment_doctor" />

    <fragment
        android:id="@+id/navigation_patient"
        android:name="com.example.hospital.ui.patient.PatientFragment"
        android:label="@string/title_patient"
        tools:layout="@layout/fragment_patient" />
</navigation>